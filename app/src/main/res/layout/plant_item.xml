<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_plantItem_cardView"
    android:layout_width="150dp"
    android:layout_height="180dp"
    android:layout_marginEnd="20dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/black_title"
    app:cardCornerRadius="20dp"
    app:cardElevation="100dp"
    app:contentPadding="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/img_plantItem_plantIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp" />

        <ImageView
            android:id="@+id/img_plantItem_lock"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/icon_lock"
            android:layout_gravity="center"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_plantItem_plantName"
        style="@style/TitleWithWrapper"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="55dp"
        android:text="Tree ABC"
        android:textAlignment="center"
        android:textColor="@color/lavender"
        android:textSize="15sp" />

</androidx.cardview.widget.CardView>
