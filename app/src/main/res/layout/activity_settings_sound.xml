<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".SettingsChangeModeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_activitySettingsSound_btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="@color/black"
            android:contentDescription="back button"
            android:src="@mipmap/icon_back" />

        <TextView
            android:id="@+id/tv_activitySettingsSound_title"
            style="@style/Title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="2dp"
            android:text="Sounds" />

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerColor="@color/black_item"
        app:dividerThickness="1dp" />

    <RadioGroup
        android:id="@+id/rgr_activitySettingsSound_radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp">


        <RadioButton
            android:id="@+id/ra_activitySettingsSound_fireCamp"
            style="@style/Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/lime_energy"
            android:paddingStart="15dp"
            android:paddingTop="5dp"
            android:text="Fire camp" />

        <RadioButton
            android:id="@+id/ra_activitySettingsSound_piano"
            style="@style/Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/lime_energy"
            android:paddingStart="15dp"
            android:paddingTop="5dp"
            android:text="Piano" />

        <RadioButton
            android:id="@+id/ra_activitySettingsSound_rain"
            style="@style/Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/lime_energy"
            android:paddingStart="15dp"
            android:paddingTop="5dp"
            android:text="Rain" />

        <RadioButton
            android:id="@+id/ra_activitySettingsSound_guitar"
            style="@style/Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/lime_energy"
            android:paddingStart="15dp"
            android:paddingTop="5dp"
            android:text="Guitar" />

    </RadioGroup>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:dividerColor="@color/black_item"
        app:dividerThickness="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">

        <TextView
            style="@style/Title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About" />

        <TextView
            style="@style/Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To make your experiences more enjoyable, pick the sound that is most to your liking" />
    </LinearLayout>

</LinearLayout>